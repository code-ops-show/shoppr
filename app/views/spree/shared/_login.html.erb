<%= form_for Spree::User.new, :as => :spree_user, :url => spree.create_new_session_path do |f| %>
  <div id="password-credentials">
    <div class='form-group'>
      <%= f.label :email, Spree.t(:email) %><br />
      <%= f.email_field :email, :class => 'title', :tabindex => 1, autofocus: true, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= f.label :password, Spree.t(:password) %><br />
      <%= f.password_field :password, :class => 'title', :tabindex => 2, class: 'form-control' %>
    </div>
  </div>
  <div class='form-group'>
    <%= f.check_box :remember_me, :tabindex => 3 %>
    <%= f.label :remember_me, Spree.t(:remember_me) %>
  </div>

  <div class='actions'>
    <%= f.submit Spree.t(:login), :class => 'btn btn-success btn-block', :tabindex => 4 %>
  </div>
<% end %>
